<form method="post" action="/Register/Register">
	<!-- 登入模態對話框 -->
	<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header border-0">
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body text-center fs-3 fw-bold">
					<i class="fa-solid fa-circle-exclamation text-danger fs-2"></i>
					<p id="loginMessage"></p>
					<!-- 在這裡添加登入表單或其他內容 -->
				</div>
				<div class="modal-footer border-0 d-flex justify-content-center">
					<button type="submit" class="btn btn-info text-white col-4">登入</button>
					<button type="button" class="btn btn-secondary col-4" data-bs-dismiss="modal">取消</button>
				</div>
			</div>
		</div>
	</div>

</form>


@section Scripts {

	<script>
		function adjustValue(button, change) {
			var inputElement = button.parentNode.querySelector('input');
			var newValue = parseInt(inputElement.value) + change;
			if (newValue >= 1) {
				inputElement.value = newValue;
			} else {
				inputElement.value = 1;
			}
		}

		// 點擊心心按鈕
		$(function () {
			var storeId = @store.StoreId;

			$('#heart-icon').click(function () {
				$.ajax({
					url: '/Store/ToggleFavorite',
					type: 'POST',
					data: { storeId: storeId },
					success: function (data) {
						if (data.success) {
							// 切換愛心圖標狀態
							$('#heart-icon').toggleClass('far fas');
						} else {
							// 顯示登入視窗
							showLoginModal(data.message);
						}
					}
				});
			});
		});

		function showLoginModal(message) {
			// 您的代碼,用於顯示登入視窗
			// 可以在這裡顯示錯誤消息
			// alert(message);
			// 設置錯誤消息
			$('#loginMessage').text(message);

			// 顯示模態對話框
			$('#loginModal').modal('show');
		}

		//商品分類篩選
		$('.category-checkbox').change(function () {
			var selectedCategories = [];
			$('.category-checkbox:checked').each(function () {
				selectedCategories.push($(this).val());
			});

			var storeId = @store.StoreId;
			// 發送 AJAX 請求
			$.ajax({
				url: '/Store/FilterProducts', // 你的控制器方法的路徑
				type: 'POST',
				data: { categoryIds: selectedCategories, storeId: storeId },
				success: function (data) {
					// 在這裡處理從控制器返回的數據
					// console.log(data);
					$('#product-list').html(data);
				},
				error: function () {
					alert('發生錯誤');
				}
			});
		});


	</script>

}
