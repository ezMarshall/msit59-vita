<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/scss/bootstrap.css" />
    @RenderSection("MyStyle", required: false)
   

</head>
<body>


    <header class="nav-area bg-dark sticky-top">
        <ul class="container-fluid nav d-flex justify-content-between align-items-center fs-2">
            <li class="nav-item">
                <a href="/ManagerHome/Index">
                    <img class="header-logo" src="~/image/logo/logo_300x150.png" alt="">
                </a>
            </li>
            <li class="nav-item">
                <a href="/ManagerLogin/"
                   class="logout-link fs-5 fw-bolder link-light text-decoration-none">
                    會員登出&nbsp;<i class="fa-solid fa-right-from-bracket"></i>
                </a>
            </li>
        </ul>

    </header>

  

    <div class="row" style="height: calc(100vh - 80px);">
        <div class="col-lg-2 col-sm-3 bg-primary justify-content-center d-flex ">
            <div id="sidebar-wrapper" class="sidebar sidebar-dark vh-100 ">
                <ul class="d-flex flex-column align-items-center h-100 list-unstyled ">
                    <li>
                        <a href="/ManagerOrders/Index">
                            <img src="~/image/logo/logo_30x30_dark.png" alt="">
                            <span>訂單管理</span>
                        </a>
                    </li>
                    <li>
                        <a href="/ManagerProducts/Index">
                            <img src="~/image/logo/logo_30x30_dark.png" alt="">
                            <span>菜單管理</span>
                        </a>
                    </li>
                    <li>
                        <a href="/ManagerStores/Index">
                            <img src="~/image/logo/logo_30x30_dark.png" alt="">
                            <span>店家資訊</span>
                        </a>
                    </li>
                    <li>
                        <a href="/ManagerReviews/Index">
                            <img src="~/image/logo/logo_30x30_dark.png" alt="">
                            <span>評論管理</span>
                        </a>
                    </li>
                    <li class="mt-auto"> <button class="btn btn-xlarge btn-danger">暫停接單</button></li>

                </ul>
            </div>
        </div>
        <div class="col-lg-10 col-sm-9 bg-light">
            <div id="content-wrapper" class="d-block h-100">
            @if (IsSectionDefined("BreadCrumb"))
            {
                <ol class="breadcrumb pt-3">
                    @RenderSection("BreadCrumb", true)
                </ol>
            }
                @if (IsSectionDefined("Content"))
            {
                <div class=" row justify-content-center ">
                        @RenderSection("Content", required: true)
                </div>
            }

        </div> 

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>




</body>